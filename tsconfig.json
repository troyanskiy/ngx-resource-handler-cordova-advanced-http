{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "types": ["node"],
    "lib": ["es2015", "dom"],
    "outDir": "dist"
  },
  "files": [
    "index.ts",
    "rest-cordova-advanced-http.ts",
    "src/RestHandlerCordovaAdvancedHttp.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
